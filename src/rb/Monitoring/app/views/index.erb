<div id="rangeservers">
<h3> Range Servers </h3>
<h4>Number of Range Servers: <%= @rs_records['RangeServerSummary']['servers'].length %></h4>

<table class="ht-table table_nodes">
<colgroup span="4"></colgroup>
<thead class="ht-table-thead">
<tr class="ht-table-subheader">
<th  class="ht-table-subheadercell">RangeServers</th>
<th class="ht-table-subheadercell"> Host </th>
<th class="ht-table-subheadercell"> System </th>
<th class="ht-table-subheadercell"> Kernel </th>
<th class="ht-table-subheadercell"> Arch </th>
<th class="ht-table-subheadercell"> Cores </th>
<th class="ht-table-subheadercell"> Disk (TB) </th>
<th class="ht-table-subheadercell"> Use<br/> (%) </th>
<th class="ht-table-subheadercell"> RAM<br/> (GB) </th>
<th class="ht-table-subheadercell"> Clock<br/> Skew </th>
<th class="ht-table-subheadercell"> Last<br/>Error </th>
<th class="ht-table-subheadercell"> Last<br/>Contact </th>
</tr>
</thead>
<% @rs_records['RangeServerSummary']['servers'].each do |server|  %>
<% if server['lastError'] != "ok" %>
<tr class="ht-table-firstrow" bgcolor="red">
<% else %>
<tr class="ht-table-firstrow">
<% end %>
<td class="ht-table-cell">
<a href="/graphs?server=<%= server['location'] %>"><%= server['location'] %></a>
</td>
<td class="ht-table-cell">
<%= server['hostname']+" ("+server['ip']+")" %>
</td>
<td class="ht-table-cell">
<%= server['vendor']+' '+server['vendorVersion'] %>
</td>
<td class="ht-table-cell">
<%= server['os']+' '+server['osVersion'] %>
</td>
<td class="ht-table-cell">
<%= server['arch'] %>
</td>
<td class="ht-table-cell">
<%= server['cores'] %>
</td>
<td class="ht-table-cell">
<%= server['disk'] %>
</td>
<td class="ht-table-cell">
<%= server['diskUsePct'] %>
</td>
<td class="ht-table-cell">
<%= server['ram'] %>
</td>
<td class="ht-table-cell">
<%= server['skew'] %>
</td>
<td class="ht-table-cell">
<%= server['lastError'] %>
</td>
<td class="ht-table-cell">
<%= server['lastContact'] %>
</td>
</tr>
<% end %>
</table>
</div>